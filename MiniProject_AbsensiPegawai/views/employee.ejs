<div class="container2">
    <div class="row">
        <h1>Data Employee</h1>

        <a class="btn btn-success" href="/add">Add Employee</a>
        <div class="data-table">
            <table>
                <tr>
                    <th>No</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Action</th>
                </tr>
                <!-- Check If Array not Empty -->
                <% if (data.length) { %>
                    <% for( let i = 0; i < data.length; i++ ) { %>
                        <!-- Menampilkan Array dari app.js -->
                    <tr>
                        <td> <%= data[i].id %> </td>
                        <td> <%= data[i].name %> </td>
                        <td> <%= data[i].email %> </td>  
                        <td>
                                <a class="btn btn-success" href="/Detail/<%= data[i].id%>">Detail</a>
                        </td> 
                    </tr>
                <% } %>
                <% } else { %>
                    <tr>
                        <td colspan="6">No User</td>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
</div>
