<% if (data.length) { %>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Absensi Pegawai</a>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link waves-effect waves-light" href="/Dashboard">Home</a>
          </li>
          <% if (data[0].position==="Admin") { %>
            <li class="nav-item">
              <a class="nav-link waves-effect waves-light" href="/Employee">Employee</a>
            </li>
          <% } %> 
        </ul>
      </div>
</nav>
    <section style="background-color: #eee;">
      <div class="container py-5">
        <div class="row">
          <div class="col">
            <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
              <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="/Dashboard">Home</a></li>
                <li class="breadcrumb-item"><a href="/Employee">Employee</a></li>
                <li class="breadcrumb-item active" aria-current="page">Employee Profile</li>
              </ol>
            </nav>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-4">
            <div class="card mb-4">
              <div class="card-body text-center">
                <img src="../img/<%=data[0].image%>" alt="avatar"
                  class="rounded-circle img-fluid" style="width: 150px;">
                <h5 class="my-3">
                  <%= data[0].username %>
                </h5>
                <p class="text-muted mb-1">
                  <%= data[0].email %>
                </p>
                <p class="text-muted mb-4">
                  <%= data[0].position %>
                </p>
                <div class="d-flex justify-content-center mb-2">
                  <a class="btn btn-success" href="/Detail/Update/<%= data[0].id%>">Update</a>
                  <a class="btn btn-danger" href="/Detail/Delete/<%= data[0].id%>"
                    onclick="return confirm('Are you sure you want to delete this record?')">Delete</a>
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-8">
            <div class="card mb-4">
              <div class="card-body">
                <div class="row">
                  <div class="col-sm-3">
                    <p class="mb-0">Full Name</p>
                  </div>
                  <div class="col-sm-9">
                    <p class="text-muted mb-0">
                      <%= data[0].name %>
                    </p>
                  </div>
                </div>
                <hr>
                <div class="row">
                  <div class="col-sm-3">
                    <p class="mb-0">Email</p>
                  </div>
                  <div class="col-sm-9">
                    <p class="text-muted mb-0">
                      <%= data[0].email %>
                    </p>
                  </div>
                </div>
                <hr>
                <div class="row">
                  <div class="col-sm-3">
                    <p class="mb-0">Mobile</p>
                  </div>
                  <div class="col-sm-9">
                    <p class="text-muted mb-0">
                      <%= data[0].mobile %>
                    </p>
                  </div>
                </div>
                <hr>
                <div class="row">
                  <div class="col-sm-3">
                    <p class="mb-0">Address</p>
                  </div>
                  <div class="col-sm-9">
                    <p class="text-muted mb-0">
                      <%= data[0].address %>
                    </p>
                  </div>
                </div>
                <hr>
                <div class="row">
                  <div class="col-sm-3">
                    <p class="mb-0">Position</p>
                  </div>
                  <div class="col-sm-9">
                    <p class="text-muted mb-0">
                      <%= data[0].position %>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <div class="card mb-4">
                <h3 style="margin: 5px;">Detail Absensi</h3>
                <table>
                  <tr>
                    <th>Name</th>
                    <th>Tanggal</th>
                    <th>Waktu</th>
                    <th>Keterangan</th>
                  </tr>
                  <% for( let i = 0; i < data.length; i++ ) { %>
                    <tr>
                      <td>
                        <%= data[i].name %>
                      </td>
                      <td>
                        <%= data[i].date %>
                      </td>
                      <td>
                        <%= data[i].time %>
                      </td>
                      <td>
                        <%= data[i].ket %>
                      </td>
                    </tr>
                  <% } %>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
<% } %>