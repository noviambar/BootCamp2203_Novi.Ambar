    <h1>Web Server NodeJs</h1>
    <p>Welcome to my page <%= nama %></p> <br>
    <h1>Contact List </h1>
        <!-- Check If Array Empty -->
        <% if (cont.length == 0) { %>       
            <p>Data is empty</p>
        <% } else { %>
            <!-- Menampilkan Array dari app.js -->
                <table>
                    <tr>
                        <th>No</th>
                        <th>Name</th>
                        <th>Email</th>
                    </tr>
                    <tr>
                        <% cont.forEach(function(conts,id) { id++ %>
                        <td> <%= id %> </td>
                        <td> <%= conts.name %> </td>
                        <td> <%= conts.email %> </td>    
                    </tr>
                        <% }) %>
                </table>
        <% } %>