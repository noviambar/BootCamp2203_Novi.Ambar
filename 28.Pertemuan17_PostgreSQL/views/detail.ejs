<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <h1>Detail Contact</h1>
          <div class="card" style="width: 18rem;">
            <div class="card-body">
              <% if (data.length) { %>
               <% for( let i = 0; i < data.length; i++ ) { %>
                <h5 class="card-title"><%= data[i].name %> </h5>
                <h6 class="card-subtitle mb-2 text-muted"><%= data[i].email %> </h6>
                <p class="card-text"><%= data[i].mobile %> </p>
                <div class="button">
                  <a  class = "btn btn-primary" href="/Detail/Edit/<%= data[i].name %>">Edit</a>
                  <a  class = "btn btn-danger" href="/Detail/Delete/<%= data[i].name %>" onclick="return confirm('Are you sure you want to delete this record?')">Delete</a>
                </div>
                <a href="/Contact" class="card-link">Back to Contact</a>
               <% } %>
              <% } %>
            </div>
          </div>    
    </div>
  </div>
</div>



